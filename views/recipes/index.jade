extends ../layout

block content
  div
    h1 View All Recipes
  div
    form.form-inline(role="form")
      div.form-group
        input.form-control(type="text",placeholder="Recipe Name",size="20")
      div.form-group
        input.form-control(type="text",placeholder="Qty",size="2")
      div.form-group
        input.form-control(type="text",placeholder="Serving Name",size="15")         
      div.form-group  
        input.form-control(type="submit",value="Add")

  div.row
    div.col-md-8
      table.table.table-bordered.table-striped
        tr
          th id
          th Name
          th &nbsp;
        tr
          td jfalja
          td 
            a(href="/recipe/edit/#") Grilled Cheese
          td [ X ]



